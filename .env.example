# AutoCure AI Platform Environment Configuration

# Database - Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/autocure

# Database - MongoDB Atlas (recommended)
MONGODB_URI=mongodb+srv://username:<password>@cluster.mongodb.net/autocure?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Email Configuration (NodeMailer with Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Server Configuration
PORT=5000
NODE_ENV=development

# AutoCure Shop Information
SHOP_NAME=AutoCure
SHOP_ADDRESS=123 Main St, Brampton, ON L6T 4M5
SHOP_PHONE=+1-905-123-4567
SHOP_EMAIL=info@autocure.net
SHOP_WEBSITE=https://autocure.net

# AWS Configuration (for future deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=autocure-files

# Client Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000